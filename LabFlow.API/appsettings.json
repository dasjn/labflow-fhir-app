{
  "ConnectionStrings": {
    "FhirDatabase": "Data Source=labflow.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LabFlow.API.Services.AuthService": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "REPLACE_WITH_YOUR_SECRET_KEY_MINIMUM_32_CHARACTERS",
    "Issuer": "LabFlowAPI",
    "Audience": "LabFlowClients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "AuthProvider": "JWT"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  }
}
